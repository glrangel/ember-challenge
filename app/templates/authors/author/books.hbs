<div class="center">
    <u><p class="name-lg">Book Info</p></u>
    <i class="name margins">Author</i>
    <p class="name-lg margins-all">{{model.author.name}}</p>
    <br />
    <i class="name margins">Title</i>
    <p class="name-lg margins-all">{{model.title}}</p>
    <br />
    <i class="name margins">Publication Date</i>
    <p class="name-lg margins-all">{{model.date}}</p>
    <div>
        <br>
        <form class="pure-form">
            {{input value=newTitle placeholder="Update Book Title"}}
            <button class="pure-button"{{action 'updateName' model.id}}>Update Title</button>
        </form>
    </div>
</div>
{{outlet}}
